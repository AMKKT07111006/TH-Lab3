@{

    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    <script language="javascript">
    
        //hiển thị lỗi
        function showError(key, mess) {
            document.getElementById(key + "err_Username").innerHTML = mess;
            document.getElementById(key + "err_Pass").innerHTML = mess;
            document.getElementById(key + "err_Repass").innerHTML = mess;
        }

        //kiểm tra lỗi
        function validate() {
            var flag = true;
            //1. username
            var username = getValue("Name");
            if (username == " " || username.length < 5 || !/^[a-zA-Z0-9]+$/.test(username)) {
                flag = false;
                showError("username", 'Kiểm tra lại User Name');
            }

            //2. Password
            var password = getValue("Pass");
            if (password == "" || password.length < 8) {
                flag = false;
                showError("password", 'Kiểm tra lại Mật khẩu');
            }

            //3. Repassword
            var repassword = getValue("RetryPass");
            if (repassword != password) {
                flag = false;
                showError("repassword", 'Kiểm tra lại Nhập lại mật khẩu');
            }
            return flag;
        }
    </script>



}

<body>

    <form name="VD8" method="post">
        <table border="1" cellpadding="10">
            <tr>
                <td colspan="2"><b>Đăng ký</b></td>
            </tr>

            <tr>
                <td>Tên đăng nhập:</td>
                <td>
                    <input type="text" id="txtName" name="Name" size="30" value="" />
                    <span id="err_Username"></span>
                </td>
            </tr>

            <tr>
                <td>Mật khẩu:</td>
                <td>
                    <input type="text" id="txtPass" name="Pass" size="30" value="" />
                    <span id="err_Pass"></span>
                </td>
            </tr>

            <tr>
                <td>Nhập lại mật khẩu:</td>
                <td>
                    <input type="text" id="txtRetrypass" name="RetryPass" size="30" value="" />
                    <span id="err_Repass"></span>
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" onclick="return validate();" id="btn" name="btn" value="Đăng ký"/>
                </td>
            </tr>
        </table>
       

    </form>
</body>

